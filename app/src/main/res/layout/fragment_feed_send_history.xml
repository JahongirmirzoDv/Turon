<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryTableColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feed.history.FeedSendHistoryFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbarDefault"
            layout="@layout/toolbar_default"
            android:fitsSystemWindows="true"
            android:visibility="visible" />
        <include
            android:id="@+id/toolbarSearch"
            layout="@layout/toolbar_search"
            android:fitsSystemWindows="true"
            android:visibility="gone" />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        android:background="@color/colorPrimary"
        android:scrollbars="horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/kun"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:background="@drawable/widget_bg"
            android:gravity="center"
            android:text="Kun" />

        <TextView
            android:id="@+id/hafta"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:background="@drawable/widget_bg"
            android:gravity="center"
            android:text="Hafta" />


        <TextView
            android:layout_weight="1"
            android:id="@+id/txtUntil"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:background="@drawable/widget_bg"
            android:gravity="center"
            android:text="...dan" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/txtFrom"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:background="@drawable/widget_bg"
            android:gravity="center"
            android:text="...gacha" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryBackgroundColor"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterLayout">

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="45.0dip"
            android:layout_weight="0.10"
            android:gravity="center"
            android:text="â„–"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:layout_height="45.0dip"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="45.0dip"
            android:layout_weight="0.22"
            android:gravity="center"
            android:text="Mijoz "
            android:textColor="@color/black"
            android:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:layout_height="45.0dip"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/text4"
            android:layout_width="0dp"
            android:layout_height="45.0dip"
            android:layout_weight="0.22"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Mashina nomeri"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:layout_height="45.0dip"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/text6"
            android:layout_width="0dp"
            android:layout_height="45.0dip"
            android:layout_weight="0.22"
            android:gravity="center"
            android:text="Tel nomeri"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:layout_height="45.0dip"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="45.0dip"
            android:layout_weight="0.22"
            android:gravity="center"
            android:text="Sana"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:layout_height="45.0dip"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/chiqish"
            android:layout_width="0dp"
            android:layout_height="45.0dip"
            android:layout_weight="0.22"
            android:gravity="center"
            android:text="Chiqish sana"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOrder"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabsLayout"
        tools:listitem="@layout/yuborish_tarix_item" />

</androidx.constraintlayout.widget.ConstraintLayout>